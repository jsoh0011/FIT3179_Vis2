{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/jsoh0011/FIT3179_Vis2/main/world_data_2023.csv"
    },
    "width": "container",
    "height": {"step": 30},
    
    
    "transform": [
      {
        "aggregate": [
          {
            "op": "average", 
            "field": "Unemployment_Rate", 
            "as": "Average_UR"
          },
          {
            "op": "count",
            "field": "Country", 
            "as": "Country_Count"
          }
        ], 
        "groupby": ["Continent"]
      }
    ],
    
    "layer": [
      {
        "params": [
          {
            "name": "highlight",
            "select": {"type": "point", "on": "mouseover"}
          },
          {"name": "select", "select": "point"}
        ],
        "mark": {
          "type": "bar", 
          "color": "#69aaa5", 
          "cursor": "pointer", 
          "stroke": "black"}
      },

      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "fontSize": 13,
          "dx": 3
        },
        "encoding": {
          "text": {"field": "Average_UR", "type": "quantitative", "format": ".2f"}
        }
      }
    ],
  
    "encoding": {
      "y": {
        "field": "Continent", 
        "type": "nominal", 
        "sort": "-x",
        "title": "Continents",
        "axis": {
          "titleFontSize": 15,
          "titleFontWeight": "bold",
          "labelFontSize": 13,
          "titlePadding": -50
        }
      },
      "x": {
        "field": "Average_UR", 
        "type": "quantitative", 
        "stack": null,
        "scale": {
          "domain": [0, 10]
        },
        "axis": null
      },
      "fillOpacity": {
        "condition": {"param": "select", "value": 1},
        "value": 0.3
      },

      "strokeWidth": {
        "condition": [
          {
            "param": "highlight",
            "empty": false,
            "value": 1
          },
          {
            "param": "select",
            "empty": false,
            "value": 2
          }
        ],
        "value": 0
      },
        
      "tooltip": [
        {"field": "Continent", "type": "nominal", "title": "Continent "}, 
        {"field": "Country_Count", "type": "quantitative", "title": "Number of Countries "},
        {"field": "Average_UR", "type": "quantitative", "title": "Average Unemployment Rate % ", "format": ".2f"}
      ]
    }, 
    "config": {"title": {"fontSize": 16, "dy": -6}, "scale": {"bandPaddingInner": 0.3}, "view": {"stroke": "transparent"}}
  }
  