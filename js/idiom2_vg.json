{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Minimalist Lollipop chart with conditional colouring",
  "data": {
    "url": "https://raw.githubusercontent.com/jsoh0011/FIT3179_Vis2/main/data/world_data_2023.csv"
  },
  "width": "container",
  "height": {"step": 30},

  "transform": [
    {
      "filter": "datum.Unemployment_Rate > 17"
    }
  ],
  
  "layer": [
    {
      "mark": {"type": "bar", "color": "black"},
      "encoding": {
        "x": {
          "field": "Unemployment_Rate",
          "type": "quantitative",
          "stack": null,
          "title": "Unemployment Rate",
          "axis": {
            "labelPadding": 18,
            "grid": false,
            "labels": false,
            "ticks": false,
            "titleFontSize": 13,
            "titlePadding": 20
          }
        },
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": "-x",
          "axis": {
            "labelFontSize": 13,
            "titleFontSize": 13,
            "titlePadding": -60
          }
        },
        "color": {
          "condition": {
            "test": "datum.Unemployment_Rate < 28",
            "value": "lightgrey"
          },
          "value": "#69aaa5"
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Continent", "title": "Continent"},
          {"field": "Unemployment_Rate", "title": "Unemployment Rate"}
        ]
      }
    },
    {
      "mark": {
        "type": "point",
        "tooltip": true,
        "size": 300,
        "filled": true,
        "opacity": 1
      },
      "encoding": {
        "color": {
          "condition": {
            "test": "datum.Unemployment_Rate < 28",
            "value": "lightgrey"
          },
          "value": "#69aaa5"
        },
  
        "x": {
          "field": "Unemployment_Rate",
          "type": "quantitative",
          "stack": null
        },
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": "-x"
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Continent", "title": "Continent"},
          {"field": "Unemployment_Rate", "title": "Unemployment Rate"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "top",
        "dy": -25,
        "fontSize": 12
      },
      "encoding": {
        "x": {
          "field": "Unemployment_Rate",
          "type": "quantitative"
        },
        "y": {
          "field": "Country",
          "type": "nominal"
        },
        "text": {"field": "Unemployment_Rate"}
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "gray",
        "strokeWidth": 0.5,
        "strokeCap": "round",
        "strokeJoin": "round"
      },
      
      "encoding": {
        "x": {"datum": 0},
        "y": {"field": "Country"}
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "scale": {"bandPaddingInner": 0.85},
    "background": "#FFFDF4"
  }
}
